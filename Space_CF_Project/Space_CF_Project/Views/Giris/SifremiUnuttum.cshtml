                    <li><a href="#" title="Linkedin"><i class="fa fa-linkedin"></i></a></li>
                    <li><a href="#" title="Instagram"><i class="fa fa-behance"></i></a></li>
                </ul>
            </div>
        </div>
    </div>  -->

    <script src="~/Tasarım_Dosyaları/Login/Login-js/jquery.js"></script>

    <script src="~/Tasarım_Dosyaları/Login/Login-js/bootstrap.min.js"></script>

    <script src="~/Tasarım_Dosyaları/Login/Login-js/fullpage.min.js"></script>

    <script src="~/Tasarım_Dosyaları/Login/Login-js/scrolloverflow.js"></script>

    <script src="~/Tasarım_Dosyaları/Login/Login-js/owl.carousel.min.js"></script>

    <script src="~/Tasarım_Dosyaları/Login/Login-js/jquery.inview.min.js"></script>

    <script src="~/Tasarım_Dosyaları/Login/Login-js/form.js"></script>

    <script src="~/Tasarım_Dosyaları/Login/Login-js/custom.js"></script>


</body>

</html>








