@model Space_CF_Project.Models.Entity.TBLUser

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,300,400,500,700,900" rel="stylesheet">

    <title>@ViewBag.Title</title>
    <!-- Additional CSS Files -->
    <link rel="stylesheet" type="text/css" href="~/Tasarım_Dosyaları/Login/Login-css/bootstrap.min.css">

    <link rel="stylesheet" type="text/css" href="~/Tasarım_Dosyaları/Login/Login-css/font-awesome.css">

    <link rel="stylesheet" type="text/css" href="~/Tasarım_Dosyaları/Login/Login-css/fullpage.min.css">

    <link rel="stylesheet" type="text/css" href="~/Tasarım_Dosyaları/Login/Login-css/owl.carousel.css">

    <link rel="stylesheet" href="~/Tasarım_Dosyaları/Login/Login-css/animate.css">

    <link rel="stylesheet" href="~/Tasarım_Dosyaları/Login/Login-css/templatemo-style.css">

    <link rel="stylesheet" href="~/Tasarım_Dosyaları/Login/Login-css/responsive.css">

</head>

<body>
    <div id="video">
        <div class="preloader">
            <div class="preloader-bounce">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>

        <header id="header">
            <div class="container-fluid">
                <div class="navbar">
                    <a href="Login#slide01" id="logo" title="Space">
                        SPACE
                    </a>
                    <div class="navigation-row">
                        <nav id="navigation">
                            <button type="button" class="navbar-toggle"> <i class="fa fa-bars"></i></button>
                            <div class="nav-box navbar-collapse">
                                <ul class="navigation-menu nav navbar-nav navbars" id="nav">


                                    <li><a class="active" href="Login#slide02">GİRİŞ YAP</a></li>
                                    <li><a class="active" href="/Giris/SignUp">KAYIT OL</a></li>
                                    <li data-menuanchor="slide01"><a href="#slide01">ŞİFREMİ UNUTTUM</a></li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </header>

        <video autoplay muted loop id="myVideo">
            <source src="~/Tasarım_Dosyaları/Login/Login-images/space.mp4" type="video/mp4">
        </video>

        <div id="fullpage" class="fullpage-default">



            <div class="section animated-row" id="sifremiunuttum">
                <div class="section-inner">
                    <div class="row justify-content-center">
                        <div class="col-md-7 wide-col-laptop">
                            <div class="title-block animate" data-animate="fadeInUp">
                                <span>Şifreni mi unuttun ?</span>
                                <h4>Lütfen e-mail adresinizi giriniz. Yeni bir şifre oluşturmak için bir bağlantı alacaksınız.</h4>
                            </div>

                            <!--adresler vardı--->
                            <div class="contact-section">
                                <div style="padding: 25px; margin-top: 100px; margin-bottom: 100px; margin-left: 120px; margin-right: 200px; height: auto;" class="col-md-9 animate" data-animate="fadeInUp">

                                    <form asp-controller="Giris" asp-action="SifremiUnuttum" method="post">
                                        @Html.AntiForgeryToken()
                                        @if (ViewBag.LoginStatus != null)
                                        {
                                            if (ViewBag.LoginStatus == 0)
                                            {
                                                <div class="alert-danger">Böyle Bir Mail Adresi Bulunamadı</div>
                                            }
                                        }
                                        <div class="input-field">
                                            <input type="email" class="form-control" name="UserMail" required placeholder="Mail">
                                        </div>
                                        <div class="input-field">
                                            <input type="password" class="form-control" name="UserSifre" required placeholder="Yeni Sifre">
                                        </div>
                                        <button type="submit" name="TBLUsers" class="btn"> Şifreyi Sıfırla</button>
                                    </form>

                                    <div id="form-messages" class="mt-3"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!---  <div id="social-icons">
            <div class="text-right">
                <ul class="social-icons">
                    <li><a href="#" title="Facebook"><i class="fa fa-facebook"></i></a></li>
