@model Space_CF_Project.Models.Entity.TBLUser
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link href="https://fonts.googleapis.com/css?family=Raleway:100,300,400,500,700,900" rel="stylesheet">

    <!-- Additional CSS Files -->
    <link rel="stylesheet" type="text/css" href="~/Tasarım_Dosyaları/Login/Login-css/bootstrap.min.css">

    <link rel="stylesheet" type="text/css" href="~/Tasarım_Dosyaları/Login/Login-css/font-awesome.css">

    <link rel="stylesheet" type="text/css" href="~/Tasarım_Dosyaları/Login/Login-css/fullpage.min.css">

    <link rel="stylesheet" type="text/css" href="~/Tasarım_Dosyaları/Login/Login-css/owl.carousel.css">

    <link rel="stylesheet" href="~/Tasarım_Dosyaları/Login/Login-css/animate.css">

    <link rel="stylesheet" href="~/Tasarım_Dosyaları/Login/Login-css/templatemo-style.css">

    <link rel="stylesheet" href="~/Tasarım_Dosyaları/Login/Login-css/responsive.css">

</head>
<body>

    <div id="video">
        <div class="preloader">
            <div class="preloader-bounce">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>

        <header id="header">
            <div class="container-fluid">
                <div class="navbar">
                    <a href="" id="logo" title="Space">
                        SPACE
                    </a>
                    <div class="navigation-row">
                        <nav id="navigation">
                            <button type="button" class="navbar-toggle"> <i class="fa fa-bars"></i></button>
                            <div class="nav-box navbar-collapse">
                                <ul class="navigation-menu nav navbar-nav navbars" id="nav">

                                    
                                    <li><a class="active" href="/Main/StateBlogPage">BLOG</a></li>
                                    <li data-menuanchor="slide2"><a href="#slide2">GİRİŞ YAP</a></li>
                                    <li><a class="active" href="/Giris/SignUp">KAYIT OL</a></li>
                                    <li><a class="active" href="SifremiUnuttum">ŞİFREMİ UNUTTUM</a></li>
                                </ul>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </header>

        <video autoplay muted loop id="myVideo">
            <source src="~/Tasarım_Dosyaları/Login/Login-images/space.mp4" type="video/mp4">
        </video>

        <div id="fullpage" class="fullpage-default">
            
            <div class="section animated-row" data-section="slide01">
                <div class="section-inner">
                    <div class="welcome-box">
                        <span class="welcome-first animate" data-animate="fadeInUp">Merhaba, Hoşgeldiniz</span>
                        <h1 class="welcome-title animate" data-animate="fadeInUp">SPACE</h1>
                        <p class="animate" data-animate="fadeInUp">
                            “Hayatımın en mutlu anıymış, bilmiyordum.”<br />Orhan Pamuk – Masumiyet Müzesi
                        </p>
                        <div class="scroll-down next-section animate data-animate=" fadeInUp""><img src="~/Tasarım_Dosyaları/Login/Login-images/mouse-scroll.png" alt=""><span>Aşağı Kaydır</span></div>
                    </div>
                </div>
            </div>



            <div class="section animated-row" id="slide2">
                <div class="section-inner">
                    <div class="row justify-content-center">
                        <div class="col-md-8 wide-col-laptop">
                            <div class="title-block animate" data-animate="fadeInUp">
                                <span>...</span>
                                <h2>GİRİŞ YAP</h2>
                            </div>
                            <div class="contact-section">
                                <div class="row">
                                    <div class="col-md-6 animate " data-animate="fadeInUp">

                                        <div id="form-messages" class="mt-3"></div>
                                    </div> 

                                    <div class="col-md-12 animate">
                                        <form method="post" asp-controller="Giris" asp-action="HomePage">
                                            @Html.AntiForgeryToken()
                                            <h6>Giriş Yap</h6>
                                            @if (ViewBag.LoginStatus != null)
                                            {
                                                if (ViewBag.LoginStatus == 0)
                                                {
                                                    <div class="alert-danger">Giriş Bilgileri Hatalı</div>
                                                }
                                            }
                                            <div class="input-field">
                                                <input type="email" id="Mail" class="form-control" name="UserMail" required placeholder="Mail">
                                            </div>
                                            <div class="input-field">
                                                <input type="password" class="form-control" name="UserSifre" required placeholder="Şifre">
                                            </div>
                                            <div class="input-field .cd-signin-modal__fieldset">
                                                <input type="checkbox" id="remember-me" checked class="cd-signin-modal__input">
                                                <label for="remember-me">Beni Hatırla</label>
                                            </div>
                                            <button type="submit" name="TBLUsers" class="btn">Giriş Yap</button>

                                            <p class="cd-signin-modal__bottom-message js-signin-modal-trigger"><a href="SifremiUnuttum" data-signin="reset">Şifremi Unuttum</a></p>

                                        </form>
                                        <div id="form-messages" class="mt-3">
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div id="form-messages" class="mt-3"></div>
        </div>
    </div>

    <div id="form-messages" class="mt-3"></div>

    <script src="~/Tasarım_Dosyaları/Login/Login-js/jquery.js"></script>

    <script src="~/Tasarım_Dosyaları/Login/Login-js/bootstrap.min.js"></script>

    <script src="~/Tasarım_Dosyaları/Login/Login-js/fullpage.min.js"></script>

    <script src="~/Tasarım_Dosyaları/Login/Login-js/scrolloverflow.js"></script>

    <script src="~/Tasarım_Dosyaları/Login/Login-js/owl.carousel.min.js"></script>

    <script src="~/Tasarım_Dosyaları/Login/Login-js/jquery.inview.min.js"></script>

    <script src="~/Tasarım_Dosyaları/Login/Login-js/form.js"></script>

    <script src="~/Tasarım_Dosyaları/Login/Login-js/custom.js"></script>
</body>
</html>
