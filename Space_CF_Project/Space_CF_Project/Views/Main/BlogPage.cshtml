    ======================================================== -->
</head>

<body>
        <!-- ======= Header ======= -->
        <header id="header" class="header fixed-top">
            <div class="container-fluid container-xl d-flex align-items-center justify-content-between">

                <a href="HomePage" class="logo d-flex align-items-center">
                    <img src="~/Tasarım_Dosyaları/Main/Main-img/logo.png" alt="">
                    <span>Space</span>
                </a>

                <nav id="navbar" class="navbar">
                    <ul>
                        <li><a class="active" href="HomePage">Anasayfa</a></li>
                        <li><a class="active" href="BlogPage">Blog</a></li>
                        <li class="dropdown">
                            <a href="#"><span>Seçenekler</span> <i class="bi bi-chevron-down"></i></a>
                            <ul>
                                <li><a href="/Main/ProfilPage">PROFİL</a></li>                              
                                <li><a href="/Giris/Login/">ÇIKIŞ</a></li>
                            </ul>
                        </li>
                        <li><a class="getstarted scrollto" href="Paylasım">Paylaşım Yap</a></li>
                    </ul>
                    <i class="bi bi-list mobile-nav-toggle"></i>
                </nav><!-- .navbar -->

            </div>
        </header><!-- End Header -->

        <main id="main">

            <!-- ======= Breadcrumbs ======= -->
            <section class="breadcrumbs">
                <div class="container">

                    <ol>
                        <li><a href="HomePage">Anasayfa</a></li>
                        <li>Blog</li>
                    </ol>
                    <h2>Blog</h2>

                </div>
            </section><!-- End Breadcrumbs -->
   
    
            <section id="blog" class="blog">
                <div class="container" data-aos="fade-up">

                    <div class="row">

                        <div class="col-lg-8 entries">
                            <form method="get" asp-controller="Main" asp-action="BlogPage">
                                <article class="entry">

                                    <div class="entry-img">
                                        <img src="@ViewData["GonPicture"]" alt="@ViewData["GonPicture"]" class="img-fluid">
                                    </div>
                                    <asp:DetailsView runat="server" Width="125px" Height="50px"></asp:DetailsView>

                                    <h2 class="entry-title">
                                        <b>@ViewData["GonBaslık"]</b>
                                    </h2>
                                    <h4>
                                        <b>@ViewData["GonText"]</b>
                                    </h4>
                                    <div class="entry-meta">
                                        <ul>
                                            <li class="d-flex align-items-center"><i class="bi bi-person"></i>>@ViewData["UserID"]</li>
                                            <li class="d-flex align-items-center"><i class="bi bi-clock"></i><time datetime="2020-01-01">@ViewData["DateTime"]</time></li>
                                            <li class="d-flex align-items-center"><i class="bi bi-bookmark-star"></i>>@ViewData["KatID"]</li>
                                        </ul>
                                    </div>
                                </article>
                            </form>

                        </div><!-- End blog entries list -->

                        <div class="col-lg-4">

                            <div class="sidebar">
                                <h3 class="sidebar-title">Kategoriler</h3>
                                <div class="sidebar-item categories">
                                    <ul>
                                        <li><a href="#">Yazılım</a></li>
                                        <li><a href="#">Tiyatro </a></li>
                                        <li><a href="#">Sanat</a></li>
                                        <li><a href="#">Bilim</a></li>
                                        <li><a href="#">Seyahat</a></li>
                                    </ul>
                                </div><!-- End sidebar recent posts-->
                            </div><!-- End sidebar -->

                        </div><!-- End blog sidebar -->
                    </div>

                </div>
            </section><!-- End Blog Section -->
        </main><!-- End #main -->
        <!-- ======= Footer ======= -->
        <footer id="footer" class="footer">



            <div class="footer-top">
                <div class="container">
                    <div class="row gy-4">
                        <div class="col-lg-5 col-md-12 footer-info">
                            <a href="HomePage" class="logo d-flex align-items-center"></a>

                            
                        </div>


                        <div class="col-lg-3 col-md-12 footer-contact text-center text-md-start">
                            <h4>Bize Ulaşın</h4>
                            <p>
                                Not Found
                                <br> <strong>Phone:</strong>
                                +Not Found<br>
                                <strong>E-Posta:</strong> NotFound@fıratUniversitesi.com<br>
                            </p>

                        </div>

                    </div>
                </div>
            </div>a


        </footer><!-- End Footer -->

        <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

        <!-- Vendor JS Files -->
        <script src="~/Tasarım_Dosyaları/Main/Main-vendor/purecounter/purecounter_vanilla.js"></script>
        <script src="~/Tasarım_Dosyaları/Main/Main-vendor/aos/aos.js"></script>
        <script src="~/Tasarım_Dosyaları/Main/Main-vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="~/Tasarım_Dosyaları/Main/Main-vendor/glightbox/js/glightbox.min.js"></script>
        <script src="~/Tasarım_Dosyaları/Main/Main-vendor/isotope-layout/isotope.pkgd.min.js"></script>
        <script src="~/Tasarım_Dosyaları/Main/Main-vendor/swiper/swiper-bundle.min.js"></script>
        <script src="~/Tasarım_Dosyaları/Main/Main-vendor/php-email-form/validate.js"></script>

        <!-- Template Main JS File -->
        <script src="~/Tasarım_Dosyaları/Main/Main-js/main.js"></script>

    </body>

</html>